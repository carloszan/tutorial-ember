<form>
	<div class="form-group">
		<label>Name</label>
		{{input type="text" class="form-control" value=name placeholder="Add a username.."}}
	</div>
  <div class="form-group">
    <label>Password</label>
    {{input type="password" class="form-control" value=password placeholder="Add a password.."}}
  </div>
	<div class="form-group">
		<label>Birthdate</label>
		{{input type="date" class="form-control" value=birthdate}}
	</div>
	<div class="form-group">
		<label>Description</label>
		{{textarea class="form-control" value=description placeholder="Describe user..."}}
	</div>
	<button {{action 'addUser'}} class="btn btn-primary">Submit</button>
</form>
